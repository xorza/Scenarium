<UserControl x:Class="Editor.NET.Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Editor.NET"
             xmlns:viewModel="clr-namespace:ViewModel"
             d:DataContext="{d:DesignInstance Type=viewModel:DesignNode}"
             mc:Ignorable="d"
             Width="Auto"
             Height="Auto">
    <UserControl.Resources>
        
    </UserControl.Resources>

    <Grid Margin="3" Background="{x:Null}">

        <Border BorderBrush="Blue" Margin="0" BorderThickness="1"></Border>

        <StackPanel Orientation="Vertical" Margin="1" Background="{x:Null}">
            <Border Background="Beige">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Content="{Binding Name}"
                           VerticalAlignment="Center"></Label>
                    <Button Grid.Column="1" Margin="2" Style="{StaticResource EmptyButton}"
                            VerticalAlignment="Center" HorizontalAlignment="Right"
                            Width="15" Height="15">
                        <Border BorderThickness="1" BorderBrush="Blue" Background="Transparent">
                            <Grid>
                                <Path Data="M 0,0 L 1,1" Stretch="Fill" Stroke="Black" StrokeThickness="2"
                                      HorizontalAlignment="Center" VerticalAlignment="Center" />
                                <Path Data="M 0,1 L 1,0" Stretch="Fill" Stroke="Black" StrokeThickness="2"
                                      HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                    </Button>
                </Grid>
            </Border>
            
            <Grid Margin="-5 2" Width="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="4"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <ItemsControl
                    ItemsSource="{Binding Inputs}"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type viewModel:Input}">
                         
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource EmptyButton}" Width="9" Height="9"
                                        VerticalAlignment="Center">
                                    <Ellipse Stroke="Black" StrokeThickness="1.5" Fill="Coral" />
                                </Button>
                                <Label Margin="0" Padding="0"
                                       VerticalAlignment="Center"
                                       Content="{Binding Name}"></Label>

                            </StackPanel>
                          
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <ItemsControl HorizontalContentAlignment="Right"
                              HorizontalAlignment="Stretch"
                              Grid.Column="2"
                              ItemsSource="{Binding Outputs}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type viewModel:Output}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Label Content="{Binding Name}" VerticalAlignment="Center"></Label>
                                <Button Style="{StaticResource EmptyButton}" Width="9" Height="9"
                                        VerticalAlignment="Center">
                                    <Ellipse Stroke="Black" StrokeThickness="1.5"
                                             Fill="Chartreuse" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </Grid>
            
            <Expander Header="Preview">
                
            </Expander>
        </StackPanel>

    </Grid>
</UserControl>