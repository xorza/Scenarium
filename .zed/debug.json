// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "label": "Rust (break on panic)",
    "adapter": "CodeLLDB",
    "request": "launch",
    "build": {
      "command": "cargo",
      "args": ["build", "-p", "scenarium-editor"],
    },
    "program": "$ZED_WORKTREE_ROOT/target/debug/scenarium-editor",
    "sourceLanguages": ["rust"],
    "initCommands": [
      "breakpoint set -n rust_panic",
      "breakpoint set -n rust_begin_unwind",
      "breakpoint set -n core::panicking::panic_fmt",
      "breakpoint set -n core::panicking::panic",
    ],
  },
]
